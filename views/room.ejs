    <div class="main">
      <div class="main__left">
        <div class="main__videos">
          <div id="video-grid">
            <div id="sharescreen" hidden>
              <video id="my-video" width="400px" height="400px" ></video>
            </div>
          </div>
        </div>
        <div class="main__controls">
          <div class="main__controls_block">
            <div
              class="main__controls_button"
              id="muteButton"
              onclick="muteUnmute()"
            >
              <i class="fa fa-microphone"></i>
            </div>
            <div
              class="main__controls_button"
              id="playPauseVideo"
              onclick="playStop()"
            >
              <i class="fa fa-video-camera"></i>
            </div>
          </div>

          <div class="main__controls_block">
            <!-- <div class="main__controls_button" id="share-screen" >
               <i class="fa fa-comment"></i> 
              <span>Share Screen</span>
            </div>
             <div class="main__controls_button" onclick="join()">
              <i class="fa fa-comment"></i> 
             <span>join</span> 
            <div class="main__controls_button" onclick="join()">
              <i class="fa fa-comment"></i> 
             <span>join</span> -->
           </div>
          </div>

          <div class="main__controls_block">
            <a href="/">
              <div
                class="main__controls_button leaveMeeting"
                id="leave-meeting"
              >
                 <i class="fa fa-times"> stop</i> 
               
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="main__right">
        <div class="main__header">
          <h6>Chat <i class="fa fa-comment"></i></h6>
        </div>
        <div class="main__chat__window" id="main__chat__window">
          <ul class="messages" id="all_messages"></ul>
        </div>
        <div class="main__message_container">
          <input
            type="text"
            id="chat_message"
            placeholder="Type message here.."
          />
        </div>
      </div>
    </div>
  </body>
</html>
