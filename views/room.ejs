<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <title>Video Chat Room</title>
    <!-- <link rel="stylesheet" type="text/css" href="room.css" /> -->
    <style>
      body {
        margin: auto;
        width: 100%;
        height: 100%;
        font-family: "Roboto", sans-serif;
      }
      .main__left {
        position: absolute;
        width: 78%;
        height: 100%;
      }
      .main__videos {
        position: absolute;
        width: 100%;
      }
      #video-grid {
        width: 100%;
        height: 500px;
        align-items: center;
        flex-wrap: wrap;
        overflow-y: auto;
        /* background-color: aqua; */
      }
      #video-grid video {
        /* //  border: 1px solid; */
        max-width: 600px;
        min-width: 200px;
      }
      #video-share {
        justify-content: center;
        height: 100px;
        width: 100%;
        align-items: center;
        flex-wrap: wrap;
        /* overflow-y: auto; */
      }
      #video-share video {
        width: 100px;
        height: 100px;
        /* //object-fit: cover; */
        border: 5px solid #000;
      }

      .main__controls {
        position: absolute;
        width: 100%;
        top: 92%;
        height: 8%;
        /* background-color: khaki; */
      }
      .main__controls_block {
        float: left;
        height: 30px;
        line-height: 30px;
      }
      .main__controls_button {
        float: left;
        margin-left: 5%;
        font-size: 13px;
      }
      .main__controls_button:hover {
        background-color: lightslategrey;
        border-radius: 10px;
      }

      .main__right {
        position: absolute;
        left: 78%;
        width: 20%;
        height: 99%;
        border: solid;
      }
      .main__header {
        color: black;
        text-align: center;
        border-bottom: 2px solid #3d3d42;
      }
      /* .main__chat__window {
         flex-grow: 1;
         overflow: auto; 
        padding: 5px;
        background: rgb(121, 121, 47);
        flex-grow: 1; 
        overflow-y: auto; 
      } */

      #all_messages {
        position: absolute;
        width: 75%;
        height: 400px;
        list-style: none;
        overflow-y: auto;

        /* background-color: rgb(182, 182, 72); */
      }
      li {
        color: black;
        width: 100%;
        margin-bottom: 5px;
      }
      .main__message_container {
        position: absolute;
        top: 90%;
        left: 5%;
      }
      .main__message_container input {
        background-color: transparent;
        color: black;
      }
      .unmute {
        color: red;
      }
    </style>
  </head>
  <body>
    <!-- <div class="div-my-video">
      <video id="my-video" width="300px" height="200px"></video>
    </div>

    <div class="video-grid" id="video-grid">
      <video id="sharecreen" hidden></video>
    </div>

    <div class="menu">
      <button id="play_video" onclick="playStop()">Video</button>
      <button id="play_micro" onclick="muteUnmute()">Micro</button>
      <button style="background: darkturquoise" onclick="startScreenShare()">
        Trình bày
      </button>
    </div> -->

    <div class="main">
      <div class="main__left">
        <div class="main__videos">
          <div id="video-grid"></div>
          <!-- <div id="video-share">
            <div id="sharescreen">
              <video id="my-video"></video>
            </div>
          </div> -->
        </div>

        <div class="main__controls">
          <div class="main__controls_block" style="width: 15%">
            <div
              class="main__controls_button"
              id="muteButton"
              onclick="muteUnmute()"
            >
              <i class="fa fa-microphone"></i>
            </div>
            <div
              class="main__controls_button"
              id="playPauseVideo"
              onclick="playStop()"
            >
              <i class="fa fa-video-camera"></i>
            </div>
          </div>

          <div
            class="main__controls_block"
            style="width: 50%; margin-left: 10%"
          >
            <button
              class="main__controls_button"
              id="share-screen"
              onclick="connect_share()"
              hidden
            >
              <span>Share Screen</span>
            </button>

            <button class="main__controls_button" id="join">
              <span>JOIN</span>
            </button>

            <button class="main__controls_button" id="live" onclick="live()">
             Record screen
            </button>

            <button
              class="main__controls_button"
              id="Record"
              onclick="recoding()"
              hidden
            >
              Record
            </button>
            <button
              class="main__controls_button"
              id="stopRecording"
              onclick="stopRecording()"
              hidden
            >
              stop Record
            </button>
            <button
              class="main__controls_button"
              id="download"
              onclick="download()"
              hidden
            >
              <span id="join">
                <span>download</span>
              </span>
            </button>
          </div>

          <div class="main__controls_block" style="float: right; width: 10%">
            <a href="/">
              <div
                class="main__controls_button leaveMeeting"
                id="leave-meeting"
              >
                <i class="fa fa-times"></i>
              </div>
            </a>
          </div>
        </div>
      </div>

      <div class="main__right">
        <div class="main__header">
          <h6>Chat <i class="fa fa-comment"></i></h6>
        </div>
        <div class="main__chat__window" id="main__chat__window">
          <ul class="messages" id="all_messages"></ul>
        </div>
        <div class="main__message_container">
          <input
            type="text"
            id="chat_message"
            placeholder="Type message here.."
          />
        </div>
      </div>
    </div>
  </body>
</html>
