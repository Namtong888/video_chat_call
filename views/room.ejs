<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <title>Video Chat Room</title>
    <!-- <link rel="stylesheet" type="text/css" href="room.css" /> -->
    <style>
      body {
        width: 100%;
        height: 100%;
        font-family: Arial, Helvetica, sans-serif;
      }
      .main {
        width: 100%;
        height: 620px;
      }
      .main__left {
        float: left;
        width: 80%;
        height: 100%;
      }
      .main__right {
        float: right;
        width: 19%;
        height: 100%;
        background: rgb(158, 158, 180);
        border: 1px solid;
      }
      .main__videos {
        width: 100%;
        height: 100%;

        align-items: center;
        justify-content: center;
      }
      .main__videos {
        width: 100%;
      }
      #video-grid {
        justify-content: center;
        width: 100%;
        height: 100%;
        align-items: center;
        flex-wrap: wrap;
        overflow-y: auto;
      }
      /* video {
        object-fit: cover;
        border: 5px solid #000;
        width: 327px;
        margin-right: 10px;
      
      }*/
      .main__controls {
        width: 100%;
        height: 10%;
        line-height: 10%;
        color: black;
        border: 1px solid;
      }
      .main__controls_block {
        margin-top: 20px;
        width: 100%;
        text-align: center;
        margin-left: 35%;
      }
      .main__controls_button {
        float: left;
        margin-right: 20px;
      }
      .main__controls_button:hover {
        background-color: lightslategrey;
        border-radius: 10px;
      }

      /* chat */

      .main__header {
        color: black;
        text-align: center;
        border-bottom: 2px solid #3d3d42;
      }
      .main__chat__window {
        width: 100%;
        height: 85%;
        flex-grow: 1;
        overflow: auto;
      }
      #all_messages {
        margin-right: 10px;
        list-style: none;
      }
      li {
        color: black;
        width: 100%;
        margin-bottom: 5px;
      }
      .main__message_container {
        margin-left: 5%;
      }
      .unmute {
        color: red;
      }
    </style>
  </head>
  <body>
    <!-- <div class="div-my-video">
      <video id="my-video" width="300px" height="200px"></video>
    </div>

    <div class="video-grid" id="video-grid">
      <video id="sharecreen" hidden></video>
    </div>

    <div class="menu">
      <button id="play_video" onclick="playStop()">Video</button>
      <button id="play_micro" onclick="muteUnmute()">Micro</button>
      <button style="background: darkturquoise" onclick="startScreenShare()">
        Trình bày
      </button>
    </div> -->

    <div class="main">
      <div class="main__left">
        <div class="main__videos">
          <div id="video-grid"></div>
          <!-- <div id="video-share">
            <div id="sharescreen">
              <video id="my-video"></video>
            </div>
          </div> -->
        </div>

        <div class="main__controls">
          <div class="main__controls_block">
            <div
              class="main__controls_button"
              id="muteButton"
              onclick="muteUnmute()"
            >
              <i class="fa fa-microphone"></i>
            </div>

            <div
              class="main__controls_button"
              id="playPauseVideo"
              onclick="playStop()"
            >
              <i class="fa fa-video-camera"></i>
            </div>

            <button
              class="main__controls_button"
              id="share-screen"
              onclick="connect_share()"
              hidden
            >
              <span>Share Screen</span>
            </button>

            <button
              class="main__controls_button"
              id="join"
              style="background: chartreuse"
            >
              <span>JOIN</span>
            </button>

            <button
              class="main__controls_button"
              id="live"
              onclick="live()"
              style="background: rgb(182, 5, 34)"
            >
              Record screen
            </button>

            <button
              class="main__controls_button"
              id="Record"
              onclick="recoding()"
              style="background: rgb(211, 10, 43)"
              hidden
            >
              Record
            </button>

            <button
              class="main__controls_button"
              id="stopRecording"
              onclick="stopRecording()"
              hidden
            >
              stop Record
            </button>

            <button
              class="main__controls_button"
              id="download"
              onclick="download()"
              hidden
            >
              <span id="join">
                <span>download</span>
              </span>
            </button>

            <a href="/">
              <div
                class="main__controls_button leaveMeeting"
                id="leave-meeting"
              >
                <i class="fa fa-times"></i>
              </div>
            </a>
          </div>
        </div>
      </div>

      <div class="main__right">
        <div class="main__header">
          <h6>Chat <i class="fa fa-comment"></i></h6>
        </div>
        <div class="main__chat__window" id="main__chat__window">
          <ul class="messages" id="all_messages"></ul>
        </div>
        <div class="main__message_container">
          <input
            type="text"
            id="chat_message"
            placeholder="Type message here.."
          />
        </div>
      </div>
    </div>
  </body>
</html>
